# Datadog Configuration for Production
# Use this for production deployments

# Service Identification
DD_SERVICE=at-daemon
DD_ENV=production
DD_VERSION=0.1.0

# Datadog Agent Configuration
DD_TRACE_AGENT_URL=http://localhost:8126
DD_TRACE_AGENT_PORT=8126

# Datadog API Configuration (REQUIRED for production)
DD_API_KEY=${DATADOG_API_KEY}
DD_SITE=datadoghq.com

# Tracing Configuration
DD_TRACE_ENABLED=true
DD_TRACE_DEBUG=false
DD_TRACE_SAMPLE_RATE=0.1
DD_TRACE_RATE_LIMIT=200

# Profiling Configuration
DD_PROFILING_ENABLED=true
DD_PROFILING_CPU_ENABLED=true
DD_PROFILING_MEMORY_ENABLED=true
DD_PROFILING_ALLOCATION_ENABLED=true

# Metrics Configuration
DD_METRICS_ENABLED=true
DD_METRICS_HOSTNAME=true

# Logging Configuration
DD_LOGS_ENABLED=true
DD_LOGS_INJECTION=true

# Application Configuration
RUST_LOG=info,at_daemon=warn
RUST_BACKTRACE=0

# Performance Tuning
TOKIO_WORKER_THREADS=8

# Security
DD_TRACE_OTEL_ENABLED=true
DD_TRACE_PROPAGATION_STYLE=datadog
