{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "auto-tundra",
  "version": "0.1.0",
  "identifier": "dev.autotundra.app",
  "build": {
    "frontendDist": "../leptos-ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "auto-tundra",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ],
    "macOS": {
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      },
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13"
    }
  }
}
